# Configuración de Ambiente - Aupa Software
# Copiar este archivo a .env y completar con tus valores reales

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_USER=aupa_user
POSTGRES_PASSWORD=tu_password_seguro_aqui
POSTGRES_DB=aupa_db

# ============================================
# n8n Configuration
# ============================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# ============================================
# Facebook Configuration
# ============================================
# Obtener en: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=tu_app_id_aqui
FACEBOOK_APP_SECRET=tu_app_secret_aqui
FACEBOOK_REDIRECT_URI=http://localhost:5678/callback/facebook

# Token de acceso para aplicación (opcional, para ciertas operaciones)
# FACEBOOK_APP_ACCESS_TOKEN=tu_app_token

# ============================================
# Instagram Configuration
# ============================================
# Instagram usa el sistema de Facebook pero con scopes diferentes
# Obtener en: https://developers.facebook.com/apps/
INSTAGRAM_APP_ID=tu_app_id_aqui
INSTAGRAM_APP_SECRET=tu_app_secret_aqui
INSTAGRAM_BUSINESS_ACCOUNT_ID=tu_instagram_business_account_id
INSTAGRAM_REDIRECT_URI=http://localhost:5678/callback/instagram

# ============================================
# TikTok Configuration
# ============================================
# Obtener en: https://developers.tiktok.com/
TIKTOK_CLIENT_ID=tu_client_id_aqui
TIKTOK_CLIENT_SECRET=tu_client_secret_aqui
TIKTOK_REDIRECT_URI=http://localhost:5678/callback/tiktok

# ============================================
# Application Configuration
# ============================================
# Modo de la aplicación: development, staging, production
APP_ENV=development

# Contraseña/token para acceder a ciertas funciones administrativas
ADMIN_PASSWORD=tu_admin_password

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/aupa.log

# ============================================
# Security Configuration
# ============================================
# Clave secreta para encriptación de datos sensibles
SECRET_KEY=tu_secret_key_aleatorio_aqui_minimo_32_caracteres

# Habilitar HTTPS en producción
ENABLE_HTTPS=false

# ============================================
# Database Encryption (para tokens sensibles)
# ============================================
# Clave para encriptar tokens de acceso almacenados
DB_ENCRYPTION_KEY=tu_encryption_key_aqui

# ============================================
# Email Configuration (opcional)
# ============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password

# ============================================
# Cache Configuration
# ============================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ============================================
# Webhook Configuration
# ============================================
WEBHOOK_SECRET=tu_webhook_secret_aqui
WEBHOOK_TIMEOUT=30

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:5678

# ============================================
# API Configuration
# ============================================
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30

# ============================================
# Feature Flags
# ============================================
FEATURE_SOCIAL_MEDIA=true
FEATURE_AI_GENERATION=true
FEATURE_ANALYTICS=true

# ============================================
# Debug Mode
# ============================================
DEBUG=false
SHOW_LOGS=false
